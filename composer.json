    "homepage": "https://github.com/aherne/php-sql-data-access-api",
    "license": "MIT",
    "require": {
        "php": "^7.1|^8.0",
    	"ext-SimpleXML": "*",
    	"ext-pdo": "*"
    },
    "require-dev": {
    	"lucinda/unit-testing": "^1.0"
    },
    "autoload": {
    	"psr-4": {
            "Lucinda\\SQL\\": "src/",
            "Test\\Lucinda\\SQL\\": "tests/"
    	}
    },
    "authors": [
